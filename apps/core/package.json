{
  "name": "core",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "with-env": "dotenv -e ../../.env",
    "prisma:generate": "npm run with-env -- prisma generate",
    "prisma:push": "npm run with-env -- prisma db push",
    "watch": "tsc -w",
    "dev": "set DEBUG=core && npm run with-env -- nodemon ./dist/app.js",
    "start": "set DEBUG=core && npm run with-env -- node ./dist/app.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "debug": "^4.3.7",
    "express": "^4.21.1",
    "kysely": "^0.27.4",
    "nanoid": "^3.3.7",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.9.0",
    "@types/pg": "^8.11.10",
    "nodemon": "^3.1.7",
    "prisma": "^5.22.0",
    "prisma-kysely": "^1.8.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
